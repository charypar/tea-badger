  form(action='/orders/create')
    div.btn-toolbar
      div.btn-group.btn-group-lg.kind
        label(for='kind') Dring
        input(type='hidden', name='order[kind]', id='kind', value='tea')

        button.btn.btn-default(type='button', data-target='#kind', data-value='tea') Tea
        button.btn.btn-default(type='button', data-target='#kind', data-value='coffee') Coffee

      div.btn-group.btn-group-lg.milk
